    "version": "0.2.0",
    "configurations": [
    {
        "name": "Launch Edge",
        "request": "launch",
        "type": "msedge",
        "url": "http://localhost:6080",
        "webRoot": "${workspaceFolder}"
    },
        {
            "type": "pwa-chrome",
            "request": "launch",
            "name": "Launch Chrome against localhost",
            "url": "http://localhost:6080",
            "webRoot": "${workspaceFolder}"
        },
        {
            "name": "Launch firefox",
            "type": "firefox",
            "request": "attach",
            "url": "http://localhost:6080",
        }
    ]
}